{
  "manifest_version": 2,

  "name": "Twitter ToolKit",
  "description": "A Twitter ToolKit by Will",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "icons" : {
    "64" : "bigicon.png"

  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["myscript.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus"
  ]
}
